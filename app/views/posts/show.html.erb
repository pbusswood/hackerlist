<h1>View Post</h1>

<div>
  <h3><%= @post.title %></h3>
  <p><strong>Email: </strong><%= mail_to(@post.email)%></p>
  <p><strong>Location: </strong><%= @post.location%></p>
  <p><strong>Price: </strong><%= @post.price ? number_to_currency(@post.price) : "Free" %></p>
  <p><strong>Content: </strong><%= @post.content %></p>
  <p><strong>Posted: </strong><%= time_ago_in_words(@post.created_at) + ' ago' %></p>
</div>

<%= link_to "Edit", edit_post_path %>
<%= link_to "Delete", @post, method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
<%= link_to "Back", posts_path %>