<%= simple_form_for @post, html: {class: "form-horizontal"} do |f| %>

  <%= f.input :user_id, input_html: {value: current_user.id}, as: :hidden %>
	<%= f.input :title %>
  <%= f.input :price %>
  <%= f.input :location %>
  <%= f.input :content %>
	

	<div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>