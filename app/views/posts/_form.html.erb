<%= form_for @post do |f| %>

	<div><%= f.label :title %><br />
	  <%= f.text_field :title %></div>
	<div><%= f.label :price %><br />
	  <%= f.text_field :price %></div>
	<div><%= f.label :location %><br />
	  <%= f.text_field :location %></div>
